<% if (errors.length > 0) {%>
    <div class="row">
        <div class="row my-3">
            <div class="alert alert-danger">
                <% errors.forEach(erro => { %>
                    <%= erro %><br>
                <% }); %>
            </div>
        </div>
    </div>
<% } %>

<% if (success.length > 0) {%>
    <div class="row">
        <div class="row my-3">
            <div class="alert alert-sucess">
                <% success.forEach(succeso => { %>
                    <%= succeso %><br>
                <% }); %>
            </div>
        </div>
    </div>
<% } %>